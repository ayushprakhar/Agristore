<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agristore - Home</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Optional custom CSS -->
    <style>
        body {
            padding-top: 56px;
        }

        .hero-section {
            padding: 100px 0;
            background: url('your-farm-image-url.jpg') no-repeat center center;
            background-size: cover;
        }

        .featurette-divider {
            margin: 5rem 0; /* Space out the Bootstrap <hr> more */
        }

        .featurette-heading {
            font-weight: 300;
            line-height: 1;
            letter-spacing: -.05rem;
        }

        .featurette-image {
            width: 100%;
            height: 270px; /* Adjust as needed */
            object-fit: cover;
        }
    </style>
</head>
<body>


    <!-- Hero Section -->
    <div class="hero-section text-center text-white" style="background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/banner2.jpg'); background-size: cover;">
        <div class="container">
            <h1 class="display-3">Welcome to Agristore</h1>
            <p class="lead">The best agricultural products at your fingertips.</p>
@*             <button type="button" class="btn btn-warning btn-rounded" data-mdb-ripple-init>
            <a href="#" class="button-52">Shop Now</a>
            </button> *@
          @*   <button class="button-52" role="button">SHOP NOW</button> *@
            <a asp-controller="Home" asp-action="Index" class="btn btn-warning btn-rounded">
            <button type="button" class="btn btn-warning btn-rounded" data-mdb-ripple-init>SHOP NOW</button>
            </a>
        </div>

    </div>

    <!-- Features Section -->
    <div class="container py-5">
        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Top-Quality Seeds. <span class="text-muted">For a bountiful harvest.</span></h2>
                <p class="lead">Discover our wide selection of seeds that promise high yield and superior quality, ensuring your farming success.</p>
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-fluid mx-auto" src="/images/g8.jpg" alt="Seeds">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 order-md-2">
                <h2 class="featurette-heading">Innovative Farming Tools. <span class="text-muted">Efficiency at its best.</span></h2>
                <p class="lead">Enhance your farming with our state-of-the-art tools designed to save you time and increase productivity.</p>
            </div>
            <div class="col-md-5 order-md-1">
                <img class="featurette-image img-fluid mx-auto" src="/images/tools.jpg" alt="Farming Tools">
            </div>
        </div>

        <hr class="featurette-divider">

        <!-- More sections can be added here -->

    </div>

    <!-- Bootstrap JS and optional JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.0/js/bootstrap.min.js"></script>
</body>
</html>

